{{- 'component-cart-items.css' | asset_url | stylesheet_tag -}}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

<cart-items class="cart" id="{{- section.id -}}">
  <div class="cart__container container container--small">
    <div class="cart__head center">
      <h1 class="h2 cart__title">
        {{- 'cart.title' | t -}}

        <span>{{- 'cart.items' | t: count: cart.items.size -}}</span>
      </h1>{%- render 'shipping-bar', class: 'cart__shipping-bar' -%}
    </div><div class="cart__body">
      {%- if cart != empty -%}
        <form action="{{- routes.cart_url -}}" class="cart__contents" method="post" id="cart">
          <div class="cart__items" id="main-cart-items" data-id="{{- section.id -}}">
            <table class="cart-items">
              <thead class="cart-items__head">
                <tr class="cart-items__row">
                  <th class="cart-items__cell cart-items__cell--item caption regular" colspan="2" scope="col">{{- 'cart.item' | t -}}</th>

                  <th class="cart-items__cell cart-items__cell--price caption regular" colspan="1" scope="col">{{- 'cart.price' | t -}}</th>

                  <th class="cart-items__cell cart-items__cell--quantity caption regular" colspan="1" scope="col">{{- 'cart.quantity' | t -}}</th>

                  <th class="cart-items__cell cart-items__cell--total caption regular" colspan="1" scope="col">{{- 'cart.total' | t -}}</th>
                </tr></thead><tbody class="cart-items__body">
                {%- for line_item in cart.items -%}
                  {%- render 'line-item', line_item: line_item -%}
                {%- endfor -%}
              </tbody><tfoot class="cart-items__foot">
                <tr class="cart-items__row">
                  <td class="cart-items__cell" colspan="5">
                    
                    <style>
                      .quote-buttons-row {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        margin-bottom: 20px;
                        gap: 20px;
                      }
                      .quote-btn {
                        display: inline-flex;
                        align-items: center;
                        justify-content: center;
                        gap: 10px;
                        padding: 18px 35px;
                        font-weight: 700;
                        font-size: 14px;
                        text-decoration: none;
                        border-radius: 50px;
                        text-transform: uppercase;
                        letter-spacing: 1px;
                        transition: all 0.3s ease;
                        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
                      }
                      .quote-btn:hover {
                        transform: translateY(-3px);
                        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
                      }
                      .quote-btn--contracts {
                        background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
                        color: #fff;
                        border: 2px solid #333;
                      }
                      .quote-btn--contracts:hover {
                        background: linear-gradient(135deg, #333 0%, #555 100%);
                      }
                      .quote-btn--create {
                        background: linear-gradient(135deg, #BCCF11 0%, #9AB00E 100%);
                        color: #000;
                        border: 2px solid #BCCF11;
                      }
                      .quote-btn--create:hover {
                        background: linear-gradient(135deg, #d4e834 0%, #BCCF11 100%);
                      }
                      .quote-btn svg {
                        width: 20px;
                        height: 20px;
                      }
                    </style>
                    
                    <div class="quote-buttons-row">
                      <a href="/cart?view=contracts" class="quote-btn quote-btn--contracts">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                        Contracts
                      </a>
                      <a href="/cart?view=contract" class="quote-btn quote-btn--create">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Create Quote
                      </a>
                    </div>
                    {%- render 'cart-summary' show_note_field: true, show_checkout_buttons: true -%}
                  </td></tr></tfoot></table></div></form>{%- endif -%}
    </div>
  </div></cart-items>

{% schema %}
{
  "name": "t:sections.main-cart.name",
  "tag": "section"
}
{% endschema %}