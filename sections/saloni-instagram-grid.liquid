{% schema %}
{
  "name": "Saloni Insta 3x3 Final",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "small_label",
      "label": "Small Label",
      "default": "LATEST ON INSTAGRAM"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "FOLLOW @SALONIFURNITURE"
    }
  ],
  "blocks": [
    {
      "type": "image_slide",
      "name": "Post",
      "limit": 12,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Instagram Link"
        },
        {
          "type": "select",
          "id": "media_type",
          "label": "Icon Type",
          "options": [
            { "value": "image", "label": "None (Photo)" },
            { "value": "video", "label": "Video (Play)" },
            { "value": "carousel", "label": "Carousel (Layers)" }
          ],
          "default": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Saloni Insta 3x3 Final",
      "blocks": [
        { "type": "image_slide" },
        { "type": "image_slide" },
        { "type": "image_slide" },
        { "type": "image_slide" },
        { "type": "image_slide" },
        { "type": "image_slide" }
      ]
    }
  ]
}
{% endschema %}

<div class="saloni-insta-section">
  <div class="saloni-insta-container">
    <header class="saloni-insta-header">
      {% if section.settings.small_label != blank %}
        <span class="saloni-label">{{ section.settings.small_label }}</span>
      {% endif %}
      {% if section.settings.main_heading != blank %}
        <h2 class="saloni-heading">{{ section.settings.main_heading }}</h2>
      {% endif %}
    </header>

    <div class="saloni-insta-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link_url | default: '#' }}" target="_blank" class="saloni-insta-item" {{ block.shopify_attributes }}>
          <div class="saloni-item-ratio">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'saloni-insta-img', alt: 'Instagram' }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'saloni-insta-img placeholder' }}
            {% endif %}

            {% if block.settings.media_type == 'video' %}
              <div class="saloni-type-icon">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
              </div>
            {% elsif block.settings.media_type == 'carousel' %}
              <div class="saloni-type-icon">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M16 2H2v16h2V4h12V2zm4 4H6v16h14V6zm-2 14H8V8h10v12z"/></svg>
              </div>
            {% endif %}

            <div class="saloni-insta-overlay">
               <div class="saloni-overlay-icon">
                 <svg viewBox="0 0 24 24" width="30" height="30" fill="#fff"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
               </div>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  /* --- GENEL AYARLAR --- */
  .saloni-insta-section {
    padding: 60px 0;
    background-color: #fff;
    font-family: var(--font-body-family);
  }
  
  /* Kapsayıcı Genişliği: Masaüstünde fotoğraftaki gibi sınırlı */
  .saloni-insta-container {
    width: 100%;
    max-width: 1100px; /* Görseldekine uygun genişlik */
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .saloni-insta-header {
    text-align: center;
    margin-bottom: 40px;
  }
  .saloni-label {
    display: block;
    font-size: 0.75rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #666;
    margin-bottom: 8px;
    font-weight: 600;
  }
  .saloni-heading {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 400;
    color: #000;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  /* --- GRID SİSTEMİ (MASAÜSTÜ) --- */
  /* İsteğin: Fotoğraftaki gibi 3 Sütun */
  .saloni-insta-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* TAM OLARAK 3 SÜTUN */
    gap: 25px; /* Fotoğraflar arası ferah boşluk */
    width: 100%;
  }

  .saloni-insta-item {
    display: block;
    position: relative;
    width: 100%;
    text-decoration: none;
    overflow: hidden;
  }

  /* Kare Format (1:1) */
  .saloni-item-ratio {
    position: relative;
    width: 100%;
    padding-bottom: 100%; 
    background: #f4f4f4;
    overflow: hidden;
  }

  .saloni-insta-img {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  /* Hover Efekti */
  .saloni-insta-item:hover .saloni-insta-img {
    transform: scale(1.05);
  }
  
  .saloni-insta-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
  }
  .saloni-insta-item:hover .saloni-insta-overlay {
    opacity: 1;
  }

  /* Video/Carousel İkonları */
  .saloni-type-icon {
    position: absolute;
    top: 12px; right: 12px;
    z-index: 3;
    color: #fff;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
  }
  .saloni-type-icon svg { width: 20px; height: 20px; display: block; }


  /* --- MOBİL GÖRÜNÜM (TELEFON) --- */
  /* İsteğin: Attığın fotodaki gibi küçük kareler (3 Sütun) */
  @media screen and (max-width: 768px) {
    .saloni-insta-section {
        padding: 40px 0;
    }
    
    .saloni-insta-container {
        max-width: 100%;
        padding: 0 5px; /* Kenar boşluğu çok az, Instagram gibi */
    }
    
    .saloni-heading {
        font-size: 1.1rem;
    }

    .saloni-insta-grid {
      /* MOBİLDE DE 3 SÜTUN (KÜÇÜK KARELER) */
      grid-template-columns: repeat(3, 1fr) !important; 
      gap: 3px; /* Çok ince boşluk (Instagram tarzı) */
    }
    
    .saloni-insta-overlay { display: none !important; }
    
    /* İkonları mobilde biraz küçültelim */
    .saloni-type-icon { top: 6px; right: 6px; }
    .saloni-type-icon svg { width: 14px; height: 14px; }
  }
</style>