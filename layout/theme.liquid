<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">

    <style>
      /* 1. MENÜ GÜVENLİĞİ: Menü ve Header'ın her zaman en üst katmanda kalmasını garantiye alıyoruz */
      .header-wrapper, .section-header, #shopify-section-header, sticky-header {
          z-index: 1000 !important;
          position: relative; 
      }

      /* 2. MASAÜSTÜ GÖRÜNÜM AYARLARI */
      @media screen and (min-width: 990px) {
        
        /* Grid Esnemesini Durdur: Resim ve açıklama kutularının boyunu eşitlemeyi kapatır */
        [id^="MainProduct-"] .grid.grid--2 { 
          display: flex !important;
          align-items: flex-start !important; 
        }

        /* Sol Sütunu (Resimleri) Yapıştır */
        /* Menü altında kalsın diye z-index: 1 verildi */
        [id^="MainProduct-"] .grid.grid--2 > div:nth-child(1) {
          position: -webkit-sticky !important;
          position: sticky !important;
          top: 100px !important; /* Header'dan ne kadar aşağıda dursun */
          z-index: 1 !important; 
          height: fit-content !important; /* Kutunun boş yere uzamasını engeller */
        }
        
        /* İçindeki medya elementinin düzgün davranmasını sağlar */
        product-media {
          display: block !important;
        }
      }
    </style>

    {%- if content_for_header contains 'tapita-seo-script-tags' -%}{%- include 'tapita-seo-schema' -%}{%- endif -%} 

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var gtmLoaded = false;
        function loadGTM() {
          if (gtmLoaded) return;
          gtmLoaded = true;
          (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
          new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
          j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
          'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
          })(window,document,'script','dataLayer','GTM-56DDDMC');
        }
        // Kullanici etkilesimi bekleniyor
        window.addEventListener('mousemove', loadGTM, {once: true});
        window.addEventListener('touchstart', loadGTM, {once: true});
        window.addEventListener('scroll', loadGTM, {once: true});
        // Guvenlik onlemi: Etkilesim olmazsa 4 saniye sonra yine de yukle
        setTimeout(loadGTM, 4000);
      });
    </script>
    <meta name="facebook-domain-verification" content="28e6r1ba8j9uixoxy4st6x6w5cebdd" />
    <meta name="google-site-verification" content="69sy1uV_SNVWqOCXsGWwcr100Wr_Qks3Ipe-frb1b30">
    
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags', page_description: page_description, page_title: page_title  %}

    {{ content_for_header }}

    {%- comment -%}
      Vendors:
    {%- endcomment -%}

    {% if settings.enable_animation %}
      {{- 'aos.css' | asset_url | stylesheet_tag: preload: true -}}
      <script src="{{ 'aos.js' | asset_url }}" defer="defer"></script>
    {% endif %}

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>

    {{- 'swiper-bundle.min.css' | asset_url | stylesheet_tag: preload: true -}}
    <script src="{{- 'swiper-bundle.min.js' | asset_url -}}" defer="defer"></script>

    <script src="{{- 'bodyScrollLock.min.js' | asset_url -}}" defer="defer"></script>
    <script src="{{- 'lazysizes.min.js' | asset_url -}}" defer="defer"></script>

    <link
      rel="stylesheet"
      href="{{ 'component-card-product.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >

    <noscript>
      {{- 'component-card-product.css' | asset_url | stylesheet_tag -}}
    </noscript>

    <script src="{{ 'card-product.js' | asset_url }}" defer="defer"></script>

    {%- unless settings.type_body_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_body_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}
    {%- unless settings.type_header_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_header_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    {{ 'base.css' | asset_url | stylesheet_tag: preload: true }}

    {%- render 'settings' -%}

    {% liquid
      if request.design_mode
        render 'design-mode-scripts'
      endif
    %}

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
      Shopify['template'] = {{ template | json }};
    </script>
    
    {%- if request.page_type == 'index' -%}
      <link rel="preload" href="https://salonifurnitureva.com/cdn/shop/files/orion-modular-sofa-g8.jpg?v=1764502001&width=800" as="image">
    {%- endif -%}

  </head>

  <body class="template{% if template.suffix %} template--{{- template.suffix -}}{% endif %}">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{- 'accessibility.skip_to_text' | t -}}
    </a>

    {%- liquid
      unless template == 'cart'
        if settings.cart_type == 'drawer'
          render 'cart-drawer'
        endif
      endunless
    -%}

    {% sections 'header-group' %}

    {% sections 'popups-group' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% render 'spinner' %}

    {% sections 'footer-group' %}

    {% render 'modal-localization' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{- 'accessibility.refresh_page' | t -}}</li>
    </ul>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}'
      };

      window.cartStrings = {
        error: `{{ 'cart.cart_error' | t }}`,
        quantityError: `{{ 'cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }
      window.variantStrings = {
        unavailable: '{{ 'products.product.unavailable' | t }}',
        addToCart: '{{ 'products.product.add_to_cart' | t }}',
        soldOut: '{{ 'products.product.sold_out' | t }}',
      }
    </script>

    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-56DDDMC"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe
    ></noscript>
    </body>
</html>